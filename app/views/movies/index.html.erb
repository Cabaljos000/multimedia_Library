<% content_for :title, "Movies" %>

<div class="flex items-center justify-between mbe-4">
  <h1 class="font-bold text-4xl">Movies</h1>
  <%= link_to "New movie", new_movie_path, class: "btn btn--primary" %>
</div>

<div id="movies" class="flex flex-col" style="gap: 2rem;">
  <% @movies.each do |movie| %>
    <div class="flex flex-col items-start gap">
      <%= render movie %>
      <%= link_to "Show this movie", movie, class: "btn" %>
    </div>
  <% end %>
</div>

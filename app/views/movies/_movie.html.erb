<div id="<%= dom_id(movie) %>" class="flex flex-col gap p-4 rounded-xl shadow bg-white">

  <div class="w-48 h-72 rounded overflow-hidden shadow-lg transform transition-transform duration-200 hover:scale-105">
    <% if movie.poster.attached? %>
      <%= image_tag movie.poster.variant(resize_to_fill: [200, 300]), alt: movie.title, class: "w-full h-full object-cover" %>
    <% else %>
      <div class="w-full h-full bg-gray-200 flex items-center justify-center">
        <span class="text-sm text-gray-500">No Image</span>
      </div>
    <% end %>
  </div>

  <div class="flex flex-col gap-2 mt-4">
    <div>
      <h4 class="font-semibold">Title:</h4>
      <p><%= movie.title %></p>
    </div>

    <div>
      <h4 class="font-semibold">Director:</h4>
      <p><%= movie.director %></p>
    </div>

    <div>
      <h4 class="font-semibold">Year:</h4>
      <p><%= movie.year %></p>
    </div>

    <div>
      <h4 class="font-semibold">Rating:</h4>
      <p><%= movie.rating %>/5</p>
    </div>

    <div>
      <h4 class="font-semibold">Franchise:</h4>
      <p><%= movie.franchise %></p>
    </div>

    <div>
      <h4 class="font-semibold">Description:</h4>
      <p><%= movie.description %></p>
    </div>
  </div>

  <div class="flex gap-2 mt-4">
    <%= link_to "Edit", edit_movie_path(movie), class: "btn btn--primary" %>
    <%= link_to "Delete", movie_path(movie), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn--danger" %>
  </div>
</div>

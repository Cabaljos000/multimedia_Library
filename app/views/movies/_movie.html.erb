<div id="<%= dom_id(movie) %>" class="bg-[#1a1a1a] text-white rounded-lg shadow-md p-6 flex flex-col gap-4 max-w-md mx-auto">

  <div class="w-48 h-72 mx-auto rounded overflow-hidden shadow-lg bg-gray-800 flex items-center justify-center transform transition-transform duration-200 hover:scale-105">
    <% if movie.poster.attached? %>
      <%= image_tag movie.poster.variant(resize_to_fill: [200, 300]), alt: movie.title, class: "w-full h-full object-cover" %>
    <% else %>
      <span class="text-sm text-gray-400 text-center">No Image</span>
    <% end %>
  </div>

  <div class="space-y-2 text-sm mt-4">
    <div>
      <h4 class="font-semibold text-gray-300">Title</h4>
      <p><%= movie.title %></p>
    </div>

    <div>
      <h4 class="font-semibold text-gray-300">Director</h4>
      <p><%= movie.director %></p>
    </div>

    <div>
      <h4 class="font-semibold text-gray-300">Year</h4>
      <p><%= movie.year %></p>
    </div>

    <div>
      <h4 class="font-semibold text-gray-300">Rating</h4>
      <p><%= movie.rating %> / 5</p>
    </div>

    <% if movie.franchise.present? %>
      <div>
        <h4 class="font-semibold text-gray-300">Franchise</h4>
        <p><%= movie.franchise %></p>
      </div>
    <% end %>

    <% if movie.description.present? %>
      <div>
        <h4 class="font-semibold text-gray-300">Description</h4>
        <p class="text-gray-200"><%= movie.description %></p>
      </div>
    <% end %>
  </div>

  <div class="flex gap-3 justify-center mt-6">
    <%= link_to "Edit", edit_movie_path(movie), class: "btn" %>
    <%= link_to "Delete", movie_path(movie), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn--danger" %>
  </div>
</div>

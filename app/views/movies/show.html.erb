<%= render @movie %>

<h1><%= @movie.title %></h1>
<p><%= @movie.description %></p>
<p>Release Date: <%= @movie.year %></p>
<p>Rating: <%= @movie.rating %></p>
<p>Director: <%= @movie.director %></p>

<div class="flex flex-wrap items-center gap mbs-6" style="--row-gap: .5rem">
  <%= link_to "Edit this movie", edit_movie_path(@movie), class: "btn" %>
  <%= link_to "Back to movies", movies_path, class: "btn" %>
  <%= button_to "Destroy this movie", @movie, method: :delete, class: "btn" %>
</div>

<%= link_to "Edit", edit_movie_path(@movie), class: "btn btn--primary" %>
<%= button_to "Delete", movie_path(@movie), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn--danger" %>


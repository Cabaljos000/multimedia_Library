<div class="max-w-xl mx-auto p-6 bg-white shadow rounded-lg">
  <div class="flex flex-col md:flex-row gap-6 mb-6">
    <div class="w-48 h-72 rounded-lg overflow-hidden shadow-md">
      <% if @movie.poster.attached? %>
        <%= image_tag @movie.poster.variant(resize_to_fill: [200, 300]), alt: @movie.title, class: "w-full h-full object-cover" %>
      <% else %>
        <div class="w-full h-full bg-gray-200 flex items-center justify-center">
          <span class="text-sm text-gray-500 text-center">No Image</span>
        </div>
      <% end %>
    </div>

    <div class="flex flex-col justify-between">
      <h1 class="text-3xl font-bold mb-2"><%= @movie.title %></h1>
      <p class="text-gray-700"><strong>Release Date:</strong> <%= @movie.year %></p>
      <p class="text-gray-700"><strong>Rating:</strong> <%= @movie.rating %></p>
      <p class="text-gray-700"><strong>Director:</strong> <%= @movie.director %></p>
      <p class="text-gray-700"><strong>Franchise:</strong> <%= @movie.franchise %></p>
    </div>
  </div>

  <div class="mb-6">
    <h2 class="text-xl font-semibold mb-2">Description</h2>
    <p class="text-gray-700"><%= @movie.description %></p>
  </div>

  <div class="flex flex-wrap gap-4">
    <%= link_to "Edit", edit_movie_path(@movie), class: "px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600 transition" %>
    <%= link_to "Back to Movies", movies_path, class: "px-4 py-2 bg-gray-300 text-gray-800 rounded hover:bg-gray-400 transition" %>
    <%= button_to "Delete", @movie, method: :delete, data: { confirm: "Are you sure?" }, class: "px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 transition" %>
  </div>
</div>

<div class="max-w-3xl mx-auto p-6 bg-[#1a1a1a] text-white shadow-lg rounded-lg mt-8">
  <div class="flex flex-col md:flex-row gap-6 mb-6">
    <div class="w-48 h-72 rounded-lg overflow-hidden shadow-md bg-gray-800">
      <% if @movie.poster.attached? %>
        <%= image_tag @movie.poster.variant(resize_to_fill: [200, 300]), alt: @movie.title, class: "w-full h-full object-cover" %>
      <% else %>
        <div class="w-full h-full flex items-center justify-center text-sm text-gray-400">
          No Image
        </div>
      <% end %>
    </div>

    <div class="flex flex-col justify-between">
      <h1 class="text-3xl font-bold mb-2"><%= @movie.title %></h1>
      <p class="text-gray-300"><strong>Release Date:</strong> <%= @movie.year %></p>
      <p class="text-gray-300"><strong>Rating:</strong> <%= @movie.rating %>/5</p>
      <p class="text-gray-300"><strong>Director:</strong> <%= @movie.director %></p>
      <p class="text-gray-300"><strong>Franchise:</strong> <%= @movie.franchise %></p>
    </div>
  </div>

  <% if @movie.description.present? %>
    <div class="mb-6">
      <h2 class="text-xl font-semibold mb-2 border-b border-gray-700 pb-1">Description</h2>
      <p class="text-gray-300 leading-relaxed"><%= @movie.description %></p>
    </div>
  <% end %>

  <div class="flex flex-wrap gap-4">
    <%= link_to "Edit", edit_movie_path(@movie), class: "btn" %>
    <%= link_to "Back to Movies", movies_path, class: "btn btn--secondary" %>
    <%= button_to "Delete", @movie, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn--danger" %>
  </div>
</div>

<%= form_with(model: movie, local: true, html: { multipart: true }) do |form| %>
  <% if movie.errors.any? %>
    <div class="alert alert--negative flex flex-col gap-half mbe-4" role="alert">
      <h2 class="font-medium leading-none"><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul class="text-sm mis-3" style="list-style: disc">
        <% movie.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Title -->
  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :title, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :title, class: "input" %>
  </div>

  <!-- Director -->
  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :director, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :director, class: "input" %>
  </div>

  <!-- Year -->
  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :year, class: "text-sm font-medium leading-none" %>
    <%= form.number_field :year, class: "input" %>
  </div>

  <!-- Rating -->
  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :rating, class: "text-sm font-medium leading-none" %>
    <%= form.number_field :rating, in: 0..5, class: "input" %>
  </div>

  <!-- Franchise -->
  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :franchise, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :franchise, class: "input" %>
  </div>

  <!-- Description -->
  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :description, class: "text-sm font-medium leading-none" %>
    <%= form.text_area :description, class: "input" %>
  </div>

  <!-- Cover Picture Upload -->
  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :image, "Upload an Image", class: "text-sm font-medium leading-none" %>
    <%= form.file_field :image, class: "input" %>
  </div>

  <!-- âœ… New Poster Upload Field -->
  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :poster, "Upload Poster", class: "text-sm font-medium leading-none" %>
    <%= form.file_field :poster, class: "input" %>
  </div>

  <div class="inline-flex items-center mbs-2 mie-1">
    <%= form.submit "Save Movie", class: "btn btn--primary" %>
  </div>
<% end %>

<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Project" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%= stylesheet_link_tag "css-zero/reset", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "css-zero/variables", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "css-zero/utilities", "data-turbo-track": "reload" %>
    <%= javascript_pack_tag 'application', 'data-turbo-track': 'reload' %>
  </head>

  <body class="bg-gray-100 text-grey-900 font-sans">
    <header class="bg-blue-600 text-white py-4 shadow-md">
      <div class="container mx-auto flex justify-between items-center px-6">
      <div>
        <%= link_to "Go Home", root_path, class: "text-3xl font-bold px-6 py-3 bg-blue-500 hover:bg-blue-700 text-white rounded-lg shadow-lg transition" %>
      </div>

      <div class="flex items-center space-x-4">
        <% if user_signed_in? %>
          <p class="text-sm">Welcome, <%= current_user.email %>!</p>
        <% else %>
          <div class="text-sm">
            <%= link_to "Login", new_user_session_path, class: "underline" %> |
            <%= link_to "Sign Up", new_user_registration_path, class: "underline" %>
          </div>
        <% end %>

        <div class="relative inline-block text-right">
          <button id="userDropdownBtn" class="px-4 py-2 bg-blue-500 hover:bg-blue-700 text-white rounded-md transition">â˜° Menu</button>
          <div id="userDropdownMenu" class="dropdown-menu absolute right-0 mt-2 w-48 bg-white text-black rounded-md shadow-lg z-50 hidden">
            <ul class="py-1">
              <% if user_signed_in? %>
                <li><%= link_to "Profile", edit_user_registration_path, class: "dropdown-item block px-4 py-2 hover:bg-gray-200" %></li>
              <% end %>
                <li><%= link_to "My Movies", movies_path, class: "dropdown-item block px-4 py-2 hover:bg-gray-2000" %></li>
                <li><%= link_to "My Books", books_path, class: "dropdown-item block px-4 py-2 hover:bg-gray-2000" %></li>
                <li><%= link_to "My Music", musics_path, class: "dropdown-item block px-4 py-2 hover:bg-gray-2000" %></li>
              <% if user_signed_in? %>
                <li><%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "dropdown-item block px-4 py-2 hover:bg-gray-200", data: { turbo_method: :delete } %></li>
              <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</header>



    <main class="container mx-auto py-6 px-4">
      <% if flash[:notice] %>
        <div class="mb-4 p-4 bg-green-200 text-green-800 border-l-4 border-green-600 rounded-md">
          <%= flash[:notice] %>
        </div>
      <% elsif flash[:alert] %>
        <div class="mb-4 p-4 bg-red-200 text-red-800 border-l-4 border-red-600 rounded-md">
          <%= flash[:alert] %>
        </div>
      <% elsif flash[:error] %>
        <div class="mb-4 p-4 bg-yellow-200 text-yellow-800 border-l-4 border-yellow-600 rounded-md">
          <%= flash[:error] %>
        </div>
      <% end %>

      <div class="bg-white p-6 rounded-lg shadow-md">
        <%= yield %>
      </div>
    </main>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const btn = document.getElementById("userDropdownBtn");
        const menu = document.getElementById("userDropdownMenu");

        btn.addEventListener("click", () => {
          menu.style.display = menu.style.display === "block" ? "none" : "block";
        });

        document.addEventListener("click", function (e) {
          if (!btn.contains(e.target) && !menu.contains(e.target)) {
            menu.style.display = "none";
          }
        });
      });
    </script>
  </body>
</html>

<div id="<%= dom_id(music) %>" class="flex flex-col gap">

  <% if music.image_url.present? %>
    <div class="flex justify-center">
      <%= image_tag music.image_url, class: "music-image", style: "width: 150px; height: 150px;" %>
    </div>
  <% end %>

  <div class="flex flex-col gap-half">
    <h4 class="font-medium leading-none">Title:</h4>
    <p class="leading-none"><%= music.title %></p>
  </div>
  <div class="flex flex-col gap-half">
    <h4 class="font-medium leading-none">Artist:</h4>
    <p class="leading-none"><%= music.artist %></p>
  </div>
  <% if music.album.present? %>
    <div class="flex flex-col gap-half">
    <h4 class="font-medium leading-none">Album:</h4>
    <p class="leading-none"><%= music.album %></p>
    </div>
  <% end %>
  <% if music.description.present? %>
    <div class="flex flex-col gap-half">
    <h4 class="font-medium leading-none">Description:</h4>
    <p class="leading-none"><%= music.description %></p>
    </div>
  <% end %>
  <% if music.genre.present? %>
    <div class="flex flex-col gap-half">
    <h4 class="font-medium leading-none">Genre:</h4>
    <p class="leading-none"><%= music.genre %></p>
    </div>
  <% end %>
  <div class="flex flex-col gap-half">
    <h4 class="font-medium leading-none">Year:</h4>
    <p class="leading-none"><%= music.year %></p>
  </div>
  <% if music.description.present? %>
    <div class="flex flex-col gap-half">
    <h4 class="font-medium leading-none">Description:</h4>
    <p class="leading-none"><%= music.description %></p>
    </div>
  <% end %>
  <% if music.rating.present? %>
    <div class="flex flex-col gap-half">
    <h4 class="font-medium leading-none">Rating:</h4>
    <p class="leading-none"><%= music.rating %></p>
    </div>
  <% end %>

</div>

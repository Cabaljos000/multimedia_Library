<div id="<%= dom_id(music) %>" class="bg-[#1a1a1a] text-white rounded-lg shadow-md p-6 flex flex-col gap-4 max-w-md mx-auto">

  <% if music.image_url.present? %>
    <div class="flex justify-center mb-4">
      <%= image_tag music.image_url, class: "rounded-md shadow w-40 h-40 object-cover" %>
    </div>
  <% end %>

  <div class="space-y-2 text-sm">
    <div>
      <h4 class="font-semibold text-gray-300">Title</h4>
      <p><%= music.title %></p>
    </div>

    <div>
      <h4 class="font-semibold text-gray-300">Artist</h4>
      <p><%= music.artist %></p>
    </div>

    <% if music.album.present? %>
      <div>
        <h4 class="font-semibold text-gray-300">Album</h4>
        <p><%= music.album %></p>
      </div>
    <% end %>

    <% if music.genre.present? %>
      <div>
        <h4 class="font-semibold text-gray-300">Genre</h4>
        <p><%= music.genre %></p>
      </div>
    <% end %>

    <div>
      <h4 class="font-semibold text-gray-300">Year</h4>
      <p><%= music.year %></p>
    </div>

    <% if music.rating.present? %>
      <div>
        <h4 class="font-semibold text-gray-300">Rating</h4>
        <p><%= music.rating %></p>
      </div>
    <% end %>

    <% if music.description.present? %>
      <div>
        <h4 class="font-semibold text-gray-300">Description</h4>
        <p class="text-sm text-gray-300"><%= music.description %></p>
      </div>
    <% end %>
  </div>
</div>

<%= form_with(model:@music, local: true) do |form| %>
  <% if @music.errors.any? %>
    <div class="alert alert--negative flex flex-col gap-half mbe-4" role="alert">
      <h2 class="font-medium leading-none"><%= pluralize(@music.errors.count, "error") %> prohibited this music from being saved:</h2>

      <ul class="text-sm mis-3" style="list-style: disc">
        <% @music.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :title, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :title, class: "input" %>
  </div>

  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :artist, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :artist, class: "input" %>
  </div>

  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :album, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :album, class: "input" %>
  </div>

  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :description, class: "text-sm font-medium leading-none" %>
    <%= form.text_area :description, class: "input", rows: 4 %>
  </div>

  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :genre, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :genre, class: "input" %>
  </div>

  <div class="flex flex-col items-start gap-half mbe-4">
    <%= form.label :year, "Year Published", class: "text-sm font-medium leading-none" %>
    <%= form.number_field :year, class: "input" %>
  </div>

  <div class="inline-flex items-center mbs-2 mie-1">
    <%= form.submit class: "btn btn--primary" %>
  </div>
<% end %>

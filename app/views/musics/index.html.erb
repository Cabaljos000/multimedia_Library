<% content_for :title, "Music" %>

<div class="flex items-center justify-between mbe-4">
  <h1 class="font-bold text-4xl">Musics</h1>
  <%= link_to "New music", new_music_path, class: "btn btn--primary" %>
</div>

<div id="music" class="flex flex-col" style="gap: 2rem;">
  <% @musics.each do |music| %>
    <div class="flex flex-col items-start gap">
    <% if music.image_url.present? %>
    <div class="flex justify-center">
      <%= image_tag music.image_url, class: "music-image", style: "width: 150px; height: 150px;" %>
    </div>
    <% end %>
    <h1><%= music.title %> By:  <%= music.artist %></h1>
    <%= link_to "Show this music", music, class: "btn" %>
    </div>
  <% end %>

</div>

<% content_for :title, "Musics" %>

<div class="flex items-center justify-between mbe-4">
  <h1 class="font-bold text-4xl">Musics</h1>
  <%= link_to "New music", new_music_path, class: "btn btn--primary" %>
</div>

<div id="musics" class="flex flex-col" style="gap: 2rem;">
  <% @musics.each do |music| %>
    <div class="flex flex-col items-start gap">
      <%= render music %>
      <%= link_to "Show this music", music, class: "btn" %>
    </div>
  <% end %>
</div>

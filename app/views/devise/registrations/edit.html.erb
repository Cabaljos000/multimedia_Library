<div class="auth-box">
  <h2>Edit Profile</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="input-label-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
    </div>

    <div class="input-label-group">
      <%= f.label :password, "Password (leave blank if you don't want to change it)" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
    </div>

    <div class="input-label-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
    </div>

    <div class="input-label-group">
      <%= f.label :current_password, "Current password (we need this to confirm your changes)" %>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "input" %>
    </div>

    <div style="text-align: center; margin-top: 1.5rem;">
      <%= f.submit "Update", class: "btn" %>
      <%= link_to "Back", root_path, style: "margin-left: 1rem; color: #ccc;" %>
    </div>
  <% end %>

  <hr style="margin: 2rem 0; border-color: #333;">

  <h3 style="color: white; margin-bottom: 0.5rem;">"Don't want an account?"</h3>

  <div style="text-align: center;">
    <%= button_to "Delete my account", registration_path(resource_name), method: :delete, data: { confirm: "Are you sure?" }, class: "btn", form: { style: "display: inline" } %>
  </div>
</div>

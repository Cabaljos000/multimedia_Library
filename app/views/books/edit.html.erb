<% content_for :title, "Editing Book" %>

<div class="max-w-xl mx-auto p-8 bg-[#1a1a1a] text-white shadow-lg rounded-lg mt-8">
  <h1 class="text-3xl font-bold mb-6 text-center border-b border-gray-700 pb-2">Edit Book</h1>

  <%= render "form", book: @book %>

  <div class="flex flex-wrap justify-center gap-4 mt-6">
    <%= link_to "Show this Book", @book, class: "btn" %>
    <%= link_to "Back to Books", books_path, class: "btn btn--secondary" %>
  </div>

  <% if @book.errors.any? %>
    <div class="mt-6 p-4 bg-red-900 text-red-200 border border-red-600 rounded">
      <h2 class="font-semibold mb-2">
        <%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:
      </h2>
      <ul class="list-disc list-inside text-sm ml-4">
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

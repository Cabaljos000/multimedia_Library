<% content_for :title, "New book" %>

<h1 class="font-bold text-4xl mbe-4">New book</h1>

<%= form_with(model: @book, local: true) do |form| %>

  <!-- Title -->
  <div class="mb-4">
    <%= form.label :title, "Title" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <!-- Author -->
  <div class="mb-4">
    <%= form.label :author, "Author" %>
    <%= form.text_field :author, class: "form-control" %>
  </div>

  <!-- Year -->
  <div class="mb-4">
    <%= form.label :year, "Year" %>
    <%= form.text_field :year, class: "form-control" %>
  </div>

  <!-- Genre -->
  <div class="mb-4">
    <%= form.label :genre, "Genre" %>
    <%= form.text_field :genre, class: "form-control" %>
  </div>

  <!-- Franchise -->
  <div class="mb-4">
    <%= form.label :franchise, "Franchise" %>
    <%= form.text_field :franchise, class: "form-control" %>
  </div>

  <!-- Description -->
  <div class="mb-4">
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <!-- Rating -->
  <div class="mb-4">
    <%= form.label :rating, "Rating" %>
    <%= form.number_field :rating, class: "form-control" %>
  </div>

  <!-- Cover Picture -->
  <div class="mb-4">
    <%= form.label :image, "Cover Picture" %>
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <!-- Submit -->
  <div class="mt-4">
    <%= form.submit "Create Book", class: "btn btn-primary" %>
  </div>

<% end %>

<!-- Back Link -->
<div class="inline-flex flex-wrap items-center gap mbs-2" style="--row-gap: .5rem">
  <%= link_to "Back to books", books_path, class: "btn" %>
</div>

<div id="<%= dom_id(book) %>" class="flex flex-col items-center w-48">
  <%= link_to book_path(book), class: "group w-full" do %>
    <div class="w-full h-72 rounded-lg overflow-hidden shadow-md transform transition-transform duration-200 group-hover:scale-105">
      <% if book.poster.attached? %>
        <%= image_tag book.poster.variant(resize_to_fill: [200, 300]), alt: book.title, class: "w-full h-full object-cover" %>
      <% else %>
        <div class="w-full h-full bg-gray-200 flex items-center justify-center">
          <span class="text-sm text-gray-500 text-center">No Image</span>
        </div>
      <% end %>
    </div>
    <!-- Removed duplicate title here -->
  <% end %>
</div>
